// Speedboat Ticket - Prisma Schema
// Database schema for speedboat ticket booking system

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== ENUMS ====================

enum UserRole {
  ADMIN
  OPERATOR
  USER
}

enum ShipStatus {
  ACTIVE
  MAINTENANCE
  INACTIVE
}

enum RouteStatus {
  ACTIVE
  INACTIVE
}

enum ScheduleStatus {
  SCHEDULED
  BOARDING
  DEPARTED
  ARRIVED
  CANCELLED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  REFUNDED
  EXPIRED
}

enum IdentityType {
  NATIONAL_ID
  PASSPORT
  DRIVERS_LICENSE
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  EXPIRED
  REFUNDED
  CANCELLED
  CHALLENGE // For credit card fraud review
  DENY // Payment denied
}

// Payment event types for audit log
enum PaymentEventType {
  CREATED // Payment record created
  TOKEN_GENERATED // Snap token generated
  WEBHOOK_RECEIVED // Webhook received from Midtrans
  STATUS_CHANGED // Status changed
  TICKET_GENERATED // Tickets generated
  EMAIL_SENT // Email notification sent
  REFUND_INITIATED // Refund started
  REFUND_COMPLETED // Refund completed
  ERROR // Error occurred
}

enum TicketStatus {
  VALID
  USED
  CANCELLED
}

// ==================== AUTH MODELS (NextAuth) ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  phone         String?
  image         String?
  role          UserRole  @default(USER)

  // Credentials auth fields
  password String? // Hashed password (nullable for OAuth users)

  // Account security
  failedLoginAttempts Int       @default(0)
  lockedUntil         DateTime?
  lastLoginAt         DateTime?
  lastLoginIp         String? // Track login IP for security
  passwordChangedAt   DateTime?

  // Relations
  accounts                Account[]
  sessions                Session[]
  bookings                Booking[]
  checkedTickets          Ticket[]                 @relation("TicketChecker")
  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens     PasswordResetToken[]
  apiKeys                 ApiKey[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Email Verification Token
model EmailVerificationToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique // Hashed token for security
  expiresAt DateTime
  usedAt    DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@map("email_verification_tokens")
}

// Password Reset Token
model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique // Hashed token for security
  expiresAt DateTime
  usedAt    DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@map("password_reset_tokens")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@index([identifier])
  @@index([token])
  @@map("verification_tokens")
}

// ==================== SECURITY AUDIT MODELS ====================

// Login Attempt Log (Security Audit)
model LoginAttempt {
  id        String   @id @default(cuid())
  email     String
  ipAddress String?
  userAgent String?
  success   Boolean
  reason    String? // "success", "invalid_password", "account_locked", "email_not_verified"
  createdAt DateTime @default(now())

  @@index([email])
  @@index([ipAddress])
  @@index([createdAt])
  @@map("login_attempts")
}

// API Key for External Integrations
model ApiKey {
  id          String    @id @default(cuid())
  name        String // Friendly name for the key
  hashedKey   String    @unique // SHA-256 hash of the actual key
  permissions String[] // Array of permission strings
  userId      String // Owner of this key
  lastUsedAt  DateTime? // Track usage
  expiresAt   DateTime? // Optional expiration
  revokedAt   DateTime? // Null if active

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([hashedKey])
  @@index([userId])
  @@map("api_keys")
}

// Webhook Audit Log
model WebhookAudit {
  id                   String   @id @default(cuid())
  source               String // e.g., "midtrans", "external"
  eventType            String // e.g., "payment.success", "payment.failed"
  payload              String   @db.Text // Truncated payload for audit
  signatureValid       Boolean // Was signature verification successful
  processingDurationMs Int // How long processing took
  status               String // "success", "failed", "skipped"
  errorMessage         String? // Error details if failed
  ipAddress            String? // Source IP address
  userAgent            String? // Source user agent
  processedAt          DateTime @default(now())

  @@index([source])
  @@index([eventType])
  @@index([status])
  @@index([processedAt])
  @@map("webhook_audits")
}

// Comprehensive Audit Log for Security Events
model AuditLog {
  id           String   @id @default(cuid())
  action       String // Action type (AUTH_LOGIN_SUCCESS, USER_UPDATE, etc.)
  userId       String? // User who performed the action (null for anonymous)
  resourceType String? // Type of resource (user, booking, payment, etc.)
  resourceId   String? // ID of the affected resource
  ipAddress    String? // Client IP address
  userAgent    String? // Client user agent (truncated)
  details      Json? // Additional context (sanitized)
  status       String // SUCCESS or FAILURE
  errorMessage String? // Error details if failed
  timestamp    DateTime @default(now())

  @@index([action])
  @@index([userId])
  @@index([resourceType])
  @@index([resourceId])
  @@index([status])
  @@index([timestamp])
  @@map("audit_logs")
}

// ==================== BUSINESS MODELS ====================

model Ship {
  id          String     @id @default(cuid())
  name        String
  code        String     @unique
  capacity    Int
  description String?
  facilities  Json       @default("[]")
  imageUrl    String?
  status      ShipStatus @default(ACTIVE)

  // Relations
  schedules Schedule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ships")
}

model Port {
  id        String  @id @default(cuid())
  name      String
  code      String  @unique
  city      String
  province  String
  address   String?
  latitude  Float?
  longitude Float?
  imageUrl  String?

  // Relations
  departureRoutes Route[] @relation("DeparturePort")
  arrivalRoutes   Route[] @relation("ArrivalPort")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ports")
}

model Route {
  id                String      @id @default(cuid())
  departurePortId   String
  arrivalPortId     String
  distance          Float // in kilometers
  estimatedDuration Int // in minutes
  basePrice         Int // in IDR, stored as integer
  status            RouteStatus @default(ACTIVE)

  // Relations
  departurePort Port       @relation("DeparturePort", fields: [departurePortId], references: [id], onDelete: Restrict)
  arrivalPort   Port       @relation("ArrivalPort", fields: [arrivalPortId], references: [id], onDelete: Restrict)
  schedules     Schedule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([departurePortId, arrivalPortId])
  @@map("routes")
}

model Schedule {
  id             String         @id @default(cuid())
  routeId        String
  shipId         String
  departureTime  DateTime
  arrivalTime    DateTime
  price          Int // in IDR
  totalSeats     Int
  availableSeats Int
  status         ScheduleStatus @default(SCHEDULED)

  // Relations
  route    Route     @relation(fields: [routeId], references: [id], onDelete: Restrict)
  ship     Ship      @relation(fields: [shipId], references: [id], onDelete: Restrict)
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ===== Optimized indexes =====
  @@index([departureTime])
  @@index([status])
  @@index([status, departureTime]) // For search queries
  @@index([routeId, status, departureTime]) // For route search
  @@index([availableSeats, status]) // For availability check
  @@map("schedules")
}

model Booking {
  id                 String        @id @default(cuid())
  bookingCode        String        @unique
  userId             String
  scheduleId         String
  totalPassengers    Int
  totalAmount        Int // in IDR
  status             BookingStatus @default(PENDING)
  expiresAt          DateTime
  confirmedAt        DateTime?
  cancelledAt        DateTime?
  cancellationReason String?

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Restrict)
  schedule   Schedule    @relation(fields: [scheduleId], references: [id], onDelete: Restrict)
  passengers Passenger[]
  payment    Payment?
  tickets    Ticket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ===== Optimized indexes =====
  @@index([bookingCode])
  @@index([status])
  @@index([userId])
  @@index([status, createdAt(sort: Desc)]) // For dashboard queries
  @@index([userId, status]) // For user bookings
  @@index([scheduleId, status]) // For schedule queries
  @@map("bookings")
}

model Passenger {
  id             String       @id @default(cuid())
  bookingId      String
  name           String
  identityType   IdentityType
  identityNumber String
  phone          String?
  seatNumber     String?

  // Relations
  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  ticket  Ticket?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("passengers")
}

model Payment {
  id        String @id @default(cuid())
  bookingId String @unique
  orderId   String @unique

  // Amount
  amount Int // Total amount in IDR

  // Payment Method & Status
  method String? // CREDIT_CARD, BANK_TRANSFER, GOPAY, QRIS, etc.
  status PaymentStatus @default(PENDING)

  // ===== MIDTRANS FIELDS =====

  // Midtrans Snap Token
  midtransToken       String? // Snap token for payment popup
  midtransRedirectUrl String? // Redirect URL from Midtrans

  // Midtrans Transaction Details (from notification)
  transactionId   String?   @unique // Midtrans transaction ID (unique for idempotency)
  transactionTime DateTime? // Transaction time from Midtrans
  paymentType     String? // Payment type (credit_card, bank_transfer, gopay, etc.)
  paymentChannel  String? // Payment channel/bank

  // Virtual Account / QRIS / E-Wallet specific
  vaNumber    String? // Virtual Account number
  bank        String? // Bank for VA payments
  qrisUrl     String? // QRIS image URL
  deeplinkUrl String? // E-wallet deeplink URL

  // Midtrans Response (store full response for debugging)
  rawResponse Json? // Full notification response

  // Timestamps
  paidAt    DateTime? // When payment was completed
  expiredAt DateTime // Payment expiry time

  // Refund (if applicable)
  refundedAt   DateTime?
  refundAmount Int?
  refundReason String?

  // ===== IDEMPOTENCY & AUDIT FIELDS =====
  processedWebhooks String[]  @default([]) // Array of processed idempotency keys
  lastWebhookAt     DateTime? // Last webhook received
  webhookCount      Int       @default(0) // Total webhooks received
  version           Int       @default(0) // Optimistic locking version

  // ===== END MIDTRANS FIELDS =====

  // Relations
  booking   Booking           @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  logs      PaymentLog[]
  auditLogs PaymentAuditLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ===== Optimized indexes =====
  @@index([orderId])
  @@index([status])
  @@index([transactionId])
  @@index([createdAt])
  @@index([status, createdAt]) // For recovery jobs
  @@index([status, lastWebhookAt]) // For stuck payment detection
  @@index([bookingId, status]) // For booking queries
  @@map("payments")
}

// ==================== PAYMENT AUDIT LOG ====================
// Records ALL payment events for debugging and compliance

model PaymentLog {
  id        String @id @default(cuid())
  paymentId String

  // Event details
  eventType PaymentEventType

  // Status tracking
  previousStatus String? // Status before this event
  newStatus      String? // Status after this event

  // Midtrans data
  midtransOrderId     String?
  midtransStatus      String? // Raw transaction_status from Midtrans
  midtransFraudStatus String? // Raw fraud_status from Midtrans
  midtransPaymentType String?

  // Full payload for debugging
  rawPayload Json?

  // Error tracking
  errorMessage String?
  errorStack   String?

  // Metadata
  ipAddress    String?
  userAgent    String?
  processedBy  String? // System or user who processed
  processingMs Int? // Processing time in milliseconds

  // Relations
  payment Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([paymentId])
  @@index([eventType])
  @@index([createdAt])
  @@index([midtransOrderId])
  @@map("payment_logs")
}

// ==================== PAYMENT AUDIT LOG (for atomic operations) ====================
// Records webhook processing attempts for idempotency tracking

model PaymentAuditLog {
  id        String  @id @default(cuid())
  paymentId String
  payment   Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  action         String // WEBHOOK_PROCESSED, MANUAL_UPDATE, REFUND, etc.
  previousStatus String?
  newStatus      String?
  webhookPayload Json?
  idempotencyKey String?
  requestId      String?

  // Actor info (for manual changes)
  actorId   String?
  actorType String? // SYSTEM, USER, ADMIN

  metadata Json? // Additional context

  processedAt DateTime @default(now())

  // ===== Optimized indexes =====
  @@index([paymentId])
  @@index([action])
  @@index([processedAt])
  @@index([idempotencyKey])
  @@index([paymentId, processedAt(sort: Desc)]) // For audit history
  @@index([action, processedAt]) // For analytics
  @@map("payment_audit_logs")
}

// ==================== WEBHOOK LOCK ====================
// Prevents race conditions in webhook processing

model WebhookLock {
  id        String   @id @default(cuid())
  orderId   String   @unique // Midtrans order_id
  lockedAt  DateTime @default(now())
  expiresAt DateTime // Lock expires after X seconds
  lockedBy  String? // Instance ID for distributed systems

  @@index([orderId])
  @@index([expiresAt])
  @@map("webhook_locks")
}

// ==================== IDEMPOTENCY RECORD ====================
// Prevents double payment creation from duplicate requests

model IdempotencyRecord {
  id        String   @id @default(cuid())
  key       String   @unique // Client-provided idempotency key
  response  Json // Cached response
  expiresAt DateTime // When this record expires
  createdAt DateTime @default(now())

  @@index([key])
  @@index([expiresAt])
  @@map("idempotency_records")
}

model Ticket {
  id            String       @id @default(cuid())
  bookingId     String
  passengerId   String       @unique
  ticketCode    String       @unique
  qrData        String
  status        TicketStatus @default(VALID)
  checkedInAt   DateTime?
  checkedInById String?

  // Relations
  booking     Booking   @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  passenger   Passenger @relation(fields: [passengerId], references: [id], onDelete: Cascade)
  checkedInBy User?     @relation("TicketChecker", fields: [checkedInById], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ticketCode])
  @@index([status])
  @@map("tickets")
}
