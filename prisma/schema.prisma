// Speedboat Ticket - Prisma Schema
// Database schema for speedboat ticket booking system

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== ENUMS ====================

enum UserRole {
  ADMIN
  OPERATOR
  USER
}

enum ShipStatus {
  ACTIVE
  MAINTENANCE
  INACTIVE
}

enum RouteStatus {
  ACTIVE
  INACTIVE
}

enum ScheduleStatus {
  SCHEDULED
  BOARDING
  DEPARTED
  ARRIVED
  CANCELLED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  REFUNDED
  EXPIRED
}

enum IdentityType {
  NATIONAL_ID
  PASSPORT
  DRIVERS_LICENSE
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  EXPIRED
  REFUND
}

enum TicketStatus {
  VALID
  USED
  CANCELLED
}

// ==================== AUTH MODELS (NextAuth) ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  phone         String?
  image         String?
  role          UserRole  @default(USER)

  // Credentials auth fields
  password String? // Hashed password (nullable for OAuth users)

  // Account security
  failedLoginAttempts Int       @default(0)
  lockedUntil         DateTime?
  lastLoginAt         DateTime?
  lastLoginIp         String? // Track login IP for security
  passwordChangedAt   DateTime?

  // Relations
  accounts                Account[]
  sessions                Session[]
  bookings                Booking[]
  checkedTickets          Ticket[]                 @relation("TicketChecker")
  emailVerificationTokens EmailVerificationToken[]
  passwordResetTokens     PasswordResetToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// Email Verification Token
model EmailVerificationToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique // Hashed token for security
  expiresAt DateTime
  usedAt    DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@map("email_verification_tokens")
}

// Password Reset Token
model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique // Hashed token for security
  expiresAt DateTime
  usedAt    DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@map("password_reset_tokens")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@index([identifier])
  @@index([token])
  @@map("verification_tokens")
}

// ==================== SECURITY AUDIT MODELS ====================

// Login Attempt Log (Security Audit)
model LoginAttempt {
  id        String   @id @default(cuid())
  email     String
  ipAddress String?
  userAgent String?
  success   Boolean
  reason    String? // "success", "invalid_password", "account_locked", "email_not_verified"
  createdAt DateTime @default(now())

  @@index([email])
  @@index([ipAddress])
  @@index([createdAt])
  @@map("login_attempts")
}

// ==================== BUSINESS MODELS ====================

model Ship {
  id          String     @id @default(cuid())
  name        String
  code        String     @unique
  capacity    Int
  description String?
  facilities  Json       @default("[]")
  imageUrl    String?
  status      ShipStatus @default(ACTIVE)

  // Relations
  schedules Schedule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ships")
}

model Port {
  id        String  @id @default(cuid())
  name      String
  code      String  @unique
  city      String
  province  String
  address   String?
  latitude  Float?
  longitude Float?
  imageUrl  String?

  // Relations
  departureRoutes Route[] @relation("DeparturePort")
  arrivalRoutes   Route[] @relation("ArrivalPort")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("ports")
}

model Route {
  id                String      @id @default(cuid())
  departurePortId   String
  arrivalPortId     String
  distance          Float // in kilometers
  estimatedDuration Int // in minutes
  basePrice         Int // in IDR, stored as integer
  status            RouteStatus @default(ACTIVE)

  // Relations
  departurePort Port       @relation("DeparturePort", fields: [departurePortId], references: [id], onDelete: Restrict)
  arrivalPort   Port       @relation("ArrivalPort", fields: [arrivalPortId], references: [id], onDelete: Restrict)
  schedules     Schedule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([departurePortId, arrivalPortId])
  @@map("routes")
}

model Schedule {
  id             String         @id @default(cuid())
  routeId        String
  shipId         String
  departureTime  DateTime
  arrivalTime    DateTime
  price          Int // in IDR
  totalSeats     Int
  availableSeats Int
  status         ScheduleStatus @default(SCHEDULED)

  // Relations
  route    Route     @relation(fields: [routeId], references: [id], onDelete: Restrict)
  ship     Ship      @relation(fields: [shipId], references: [id], onDelete: Restrict)
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([departureTime])
  @@index([status])
  @@map("schedules")
}

model Booking {
  id                 String        @id @default(cuid())
  bookingCode        String        @unique
  userId             String
  scheduleId         String
  totalPassengers    Int
  totalAmount        Int // in IDR
  status             BookingStatus @default(PENDING)
  expiresAt          DateTime
  confirmedAt        DateTime?
  cancelledAt        DateTime?
  cancellationReason String?

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Restrict)
  schedule   Schedule    @relation(fields: [scheduleId], references: [id], onDelete: Restrict)
  passengers Passenger[]
  payment    Payment?
  tickets    Ticket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([bookingCode])
  @@index([status])
  @@index([userId])
  @@map("bookings")
}

model Passenger {
  id             String       @id @default(cuid())
  bookingId      String
  name           String
  identityType   IdentityType
  identityNumber String
  phone          String?
  seatNumber     String?

  // Relations
  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  ticket  Ticket?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("passengers")
}

model Payment {
  id             String        @id @default(cuid())
  bookingId      String        @unique
  orderId        String        @unique
  transactionId  String?
  paymentType    String?
  paymentChannel String?
  amount         Int // in IDR
  status         PaymentStatus @default(PENDING)
  paidAt         DateTime?
  expiredAt      DateTime
  vaNumber       String?
  bank           String?
  qrisUrl        String?
  deeplinkUrl    String?
  rawResponse    Json?

  // Relations
  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([status])
  @@map("payments")
}

model Ticket {
  id            String       @id @default(cuid())
  bookingId     String
  passengerId   String       @unique
  ticketCode    String       @unique
  qrData        String
  status        TicketStatus @default(VALID)
  checkedInAt   DateTime?
  checkedInById String?

  // Relations
  booking     Booking   @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  passenger   Passenger @relation(fields: [passengerId], references: [id], onDelete: Cascade)
  checkedInBy User?     @relation("TicketChecker", fields: [checkedInById], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ticketCode])
  @@index([status])
  @@map("tickets")
}
